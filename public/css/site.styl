.loginList,
.menuList,
.signupList
  z-index 1000
  display none
  position absolute
  background #fff
  border 1px solid #ccc
  border-radius 6px
  right 0


.loginList,
.signupList
  min-width 200px
  padding 12px 12px 0
  margin-top: 4px

.menuList
  position absolute
  left initial
  min-width 0
  padding 0
  overflow hidden
  a
    height 2.75em
    line-height 2.5em !important

.control-buttons
  margin-top 18px

.control-button
  text-align center
  cursor pointer
  &:hover
    margin-top -2px
  &:active
    margin-top 2px
  i
    font-size 50px;
  p
    font-size 30px
    //font-size 36px
    //font-family 'Indie Flower', cursive

.dislike-button
  color darkred

.tags-button
  color darkgoldenrod

.skip-button
  color dimgray

.like-button
  color darkgreen

.title
  position absolute
  width 100%
  h1
    font-family 'Indie Flower', cursive
    font-size 54px
    margin-top 12px
    a
      color darkmagenta
      &:hover
        color #428bca
        text-decoration none
    text-align center
    @media (max-width: 500px)
       text-align left
       margin-left 15px