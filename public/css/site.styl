body
  width 100vw
  height 100vh
  overflow hidden

#main
  width 100%
  text-align center
  //overflow hidden
  position relative
  height calc(100vh - 220px)
  width 100vw

  margin-top: 6px

  cursor hand
  cursor grab
  cursor -moz-grab
  cursor -webkit-grab
  &:active {
    cursor hand
    cursor grabbing
    cursor -moz-grabbing;
    cursor -webkit-grabbing;
  }

.swippl-slide
  //visibility  hidden
  pointer-events none
  margin: auto;
  width       100vw
  height      100% //100vh
  position    absolute
  top         0
  left        0
  z-index     1
  opacity   0

